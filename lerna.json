{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "npmClientArgs": [
    "--pure-lockfile"
  ],
  "useWorkspaces": true,
  "version": "3.0.0-beta.3",
  "command": {
    "version": {
      "allowBranch": "main"
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "allowBranch": "release",
      "access": "public"
    }
  }
}
