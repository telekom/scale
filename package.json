{
    "name": "telements",
    "version": "0.0.1",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/util",
        "packages/config",
        "packages/styles",
        "packages/components-html",
        "packages/components-web",
        "packages/components-react",
        "packages/generator-sketch"
    ],
    "scripts": {
        "postinstall": "yarn build",
        "clean": "./scripts/clean.sh",
        "build": "./scripts/build.sh",
        "build:components": "./scripts/build-components.sh",
        "watch:components:react": "yarn workspace @telements/components-react npx tsc -b -w --verbose",
        "watch:components:web": "yarn workspace @telements/components-web watch",
        "watch:components:html": "yarn workspace @telements/components-html npx tsc -b -w --verbose",
        "watch:styles": "yarn workspace @telements/styles npx tsc -b -w --verbose"
    },
    "devDependencies": {
        "rimraf": "2.6.3"
    }
}
