<div data-sketch-artboard="Progress Bar" class="artboard">
  <h1 class="title--artboard">Progress Bar</h1>

  <h2 class="title--artboard-section">Standard</h2>
  <div style="display: inline-block; width: 400px">
    <scale-progress-bar
      data-sketch-key="progress-bar-0"
      show-status="true"
      percentage="20"
      label="Progress Bar Label"
    ></scale-progress-bar>
  </div>
  <br /><br />

  <h2 class="title--artboard-section">With description</h2>
  <div style="display: inline-block; width: 400px">
    <scale-progress-bar
      data-sketch-key="progress-bar-2"
      show-status="true"
      percentage="20"
      label="Progress Bar Label"
      status-description="Description"
    ></scale-progress-bar>
  </div>
  <br /><br />

  <h2 class="title--artboard-section">Complete</h2>
  <div style="display: inline-block; width: 400px">
    <scale-progress-bar
      data-sketch-key="progress-bar-3"
      percentage="100"
      show-status="false"
      status-description="Description"
      label="Progress Bar Label"
      ><scale-icon-action-success
        slot="icon"
        decorative
        size="16"
      ></scale-icon-action-success
    ></scale-progress-bar>
  </div>
  <br /><br />

  <h2 class="title--artboard-section">Error</h2>
  <div style="display: inline-block; width: 400px">
    <scale-progress-bar
      data-sketch-key="progress-bar-5"
      percentage="0"
      has-error
      show-status="false"
      status-description="Description"
      label="Progress Bar Label"
      ><scale-icon-action-circle-close
        color="#d82a48"
        slot="icon"
        decorative
        size="16"
      ></scale-icon-action-circle-close
    ></scale-progress-bar>
  </div>
  <br /><br />

  <h2 class="title--artboard-section">Custom Color</h2>
  <div style="display: inline-block; width: 400px">
    <scale-progress-bar
      data-sketch-key="progress-bar-1"
      show-status="true"
      percentage="20"
      custom-color="#009DE0"
      label="Progress Bar Label"
    ></scale-progress-bar>
  </div>
  <br /><br />

  <h2 class="title--artboard-section">Complete Green</h2>
  <div style="display: inline-block; width: 400px">
    <scale-progress-bar
      data-sketch-key="progress-bar-4"
      percentage="100"
      custom-color="#67c23a"
      show-status="false"
      status-description="Description"
      label="Progress Bar Label"
      ><scale-icon-action-success
        slot="icon"
        decorative
        size="16"
      ></scale-icon-action-success
    ></scale-progress-bar>
  </div>
  <br /><br />
</div>

<script src="/symbol_names.js"></script>
<script>
  Array.from(document.querySelectorAll('scale-progress-bar')).forEach((btn) => {
    var h2name = btn.parentNode.previousElementSibling.textContent;
    btn.dataset.sketchSymbol = `Progress Bar / ${order(0, h2name)}`;
  });
</script>
