<script src="/symbol_names.js"></script>
<script>
  Array.from(document.querySelectorAll('scale-accordion')).forEach((btn) => {
    btn.dataset.sketchSymbol = `Accordion / ${order(
      1,
      btn.hasAttribute('expanded')
        ? 'Expanded'
        : btn.hasAttribute('example')
        ? `Example`
        : 'Standard'
    )}${
      btn.hasAttribute('example')
        ? ' / ' + order(2, 'Expanded ' + btn.getAttribute('example'))
        : ''
    } / ${order(4, getStateName(btn))}`;
  });
</script>
