<div
  data-sketch-artboard="Accordion"
  class="artboard"
  data-sketch-unnamed-component-path="Accordion"
>
  <h1 class="title--artboard">Accordion</h1>

  <h2 class="title--artboard-section">Collapsed</h2>
  <div class="agent-states--grid">
    <div class="agent-states--item">
      <p class="agent-states--label">:available</p>
      <scale-accordion data-sketch-key="accordion-1">
        <scale-collapsible>
          <h3>Accordion Label</h3>
          <p>Accordion Content</p>
        </scale-collapsible>
      </scale-accordion>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:hover</p>
      <scale-accordion data-sketch-key="accordion-2" data-sketch-state="hover">
        <scale-collapsible>
          <h3>Accordion Label</h3>
          <p>Accordion Content</p>
        </scale-collapsible>
      </scale-accordion>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:focus</p>
      <scale-accordion data-sketch-key="accordion-3" data-sketch-state="focus">
        <scale-collapsible>
          <h3>Accordion Label</h3>
          <p>Accordion Content</p>
        </scale-collapsible>
      </scale-accordion>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:pressed</p>
      <scale-accordion data-sketch-key="accordion-4" data-sketch-state="active">
        <scale-collapsible>
          <h3>Accordion Label</h3>
          <p>Accordion Content</p>
        </scale-collapsible>
      </scale-accordion>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:disabled</p>
      –
    </div>
  </div>

  <h2 class="title--artboard-section">Expanded</h2>
  <div class="agent-states--grid">
    <div class="agent-states--item">
      <p class="agent-states--label">:available</p>
      <scale-accordion expanded="true" data-sketch-key="accordion-5">
        <scale-collapsible>
          <h3>Accordion Label</h3>
        </scale-collapsible>
      </scale-accordion>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:hover</p>
      <scale-accordion
        expanded="true"
        data-sketch-key="accordion-6"
        data-sketch-state="hover"
      >
        <scale-collapsible>
          <h3>Accordion Label</h3>
        </scale-collapsible>
      </scale-accordion>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:focus</p>
      <scale-accordion
        expanded="true"
        data-sketch-key="accordion-7"
        data-sketch-state="focus"
      >
        <scale-collapsible>
          <h3>Accordion Label</h3>
        </scale-collapsible>
      </scale-accordion>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:pressed</p>
      <scale-accordion
        expanded="true"
        data-sketch-key="accordion-8"
        data-sketch-state="active"
      >
        <scale-collapsible>
          <h3>Accordion Label</h3>
        </scale-collapsible>
      </scale-accordion>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:disabled</p>
      –
    </div>
  </div>

