<script>
  Array.from(document.querySelectorAll('scale-tab-nav')).forEach((btn) => {
    var hasIcon = !!btn.querySelector('scale-icon-home-home');
    var isExample = btn.children.length > 4;
    if (isExample) {
      btn.dataset.sketchSymbol = `Tab Navigation / ${order(
        1,
        btn.hasAttribute('small') ? 'Small' : 'Standard'
      )} / ${order(
        2,
        hasIcon ? 'Text & Icon' : 'Text Only'
      )} / ${'03 Example'}`;
    } else {
      Array.from(btn.querySelectorAll('scale-tab-header')).forEach(
        (header, idx) => {
          header.dataset.sketchSymbol = `Tab Navigation / ${order(
            1,
            btn.hasAttribute('small') ? 'Small' : 'Standard'
          )} / ${order(2, hasIcon ? 'Text & Icon' : 'Text Only')} / ${
            idx === 0 ? '01 Selected' : '02 Not Selected'
          } / ${order(4, getStateName(header))}`;
        }
      );
    }
  });
</script>
<script>
  function onBeforePage2Layers() {
    var all = document.body.querySelectorAll('scale-tab-header');
    Array.from(all).forEach((el) =>
      el.shadowRoot.firstChild.classList.remove('tab-header--has-focus')
    );

    var focuses = document.body.querySelectorAll('[data-sketch-state=focus]');
    Array.from(focuses).forEach((el) => {
      el.shadowRoot.firstChild.classList.add('tab-header--has-focus');
      el.classList.add('tab-header--has-focus');
    });

    var focuses = document.body.querySelectorAll('[data-sketch-state=hover]');
    Array.from(focuses).forEach((el) => {
      el.shadowRoot.firstChild.classList.add('tab-header--has-hover');
      el.classList.add('tab-header--has-hover');
    });

    var focuses = document.body.querySelectorAll('[data-sketch-state=active]');
    Array.from(focuses).forEach((el) => {
      el.shadowRoot.firstChild.classList.add('tab-header--has-active');
      el.classList.add('tab-header--has-active');
    });
  }
</script>
