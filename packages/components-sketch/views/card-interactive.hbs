<div
  data-sketch-artboard="Card Interactive"
  class="artboard"
  style="width: 1810px"
>
  <h1 class="title--artboard">Card Interactive</h1>

  <h2 class="title--artboard-section">Padding on</h2>
  <div class="agent-states--grid">
    <div class="agent-states--item">
      <p class="agent-states--label">:enabled</p>
      <scale-card interactive data-sketch-key="card-interactive-1">
        <img src="/placeholder.png" alt="" />
      </scale-card>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:hover</p>
      <scale-card
        interactive
        data-sketch-state="hover"
        data-sketch-key="card-interactive-2"
      >
        <img src="/placeholder.png" alt="" />
      </scale-card>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:focus</p>
      <scale-card
        interactive
        data-sketch-state="focus"
        data-sketch-key="card-interactive-3"
      >
        <img src="/placeholder.png" alt="" />
      </scale-card>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:active/:selected</p>
      <scale-card
        interactive
        data-sketch-state="active"
        data-sketch-key="card-interactive-4"
      >
        <img src="/placeholder.png" alt="" />
      </scale-card>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:disabled</p>
      <scale-card
        interactive
        disabled="true"
        data-sketch-key="card-interactive-5"
      >
        <img src="/placeholder.png" alt="" />
      </scale-card>
    </div>
  </div>

  <h2 class="title--artboard-section">Padding off</h2>
  <div class="agent-states--grid">
    <div class="agent-states--item">
      <p class="agent-states--label">:enabled</p>
      <scale-card
        data-no-padding
        interactive
        data-sketch-key="card-interactive-6"
      >
        <img src="/placeholder.png" alt="" style="display: block" />
      </scale-card>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:hover</p>
      <scale-card
        data-no-padding
        interactive
        data-sketch-state="hover"
        data-sketch-key="card-interactive-7"
      >
        <img src="/placeholder.png" alt="" style="display: block" />
      </scale-card>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:focus</p>
      <scale-card
        data-no-padding
        interactive
        data-sketch-state="focus"
        data-sketch-key="card-interactive-8"
      >
        <img src="/placeholder.png" alt="" style="display: block" />
      </scale-card>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:active/:selected</p>
      <scale-card
        data-no-padding
        interactive
        data-sketch-state="active"
        data-sketch-key="card-interactive-9"
      >
        <img src="/placeholder.png" alt="" style="display: block" />
      </scale-card>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:disabled</p>
      <scale-card
        data-no-padding
        interactive
        disabled="true"
        data-sketch-key="card-interactive-10"
      >
        <img src="/placeholder.png" alt="" style="display: block" />
      </scale-card>
    </div>
    <script>
      Array.from(document.querySelectorAll('[data-no-padding]')).forEach(
        (el) => {
          el.styles = { card__body: { padding: 0 } };
        }
      );
    </script>
  </div>
</div>

<script src="/symbol_names.js"></script>
<script>
  Array.from(document.querySelectorAll('scale-card')).forEach((btn) => {
    btn.dataset.sketchSymbol = `Card / 02 Interactive / ${order(
      2,
      'Padding ' + (btn.dataset.noPadding == null ? 'on' : 'off')
    )} / ${order(4, getStateName(btn))}`;
  });
</script>
