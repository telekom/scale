<script>


  function generateSymbolName(symbol) {

    const getCheckedState = () => {
      if (symbol.dataset.sketchKey.includes("checked")) return "Selected"
      if (symbol.dataset.sketchKey.includes("indeterminate")) return "Indeterminate"
      return "Standard"
    }

    const getHelperState = () => {
      if (symbol.dataset.sketchKey.includes("info")) return "Info"
      if (symbol.dataset.sketchKey.includes("error")) return "Error"
      return "Standard"
    }

    const getAgentState = () => {
      if (symbol.dataset.fakeState === "hover") return "Hover"
      if (symbol.dataset.fakeState === "focus") return "Focus"
      if (symbol.dataset.fakeState === "active") return "Active"
      if (symbol.dataset.sketchKey.includes("disabled")) return "Disabled"
      return "Standard"
    }

    return ["Checkbox Group",
      order(1, getCheckedState()),
      order(2, getHelperState()),
      order(3, getAgentState()),
    ].join(" / ")
  }

  function onBeforePage2Layers() {
    const groups = Array.from(document.querySelectorAll("scale-checkbox-group"));

    groups.forEach(group => {
      group.style.position = "relative";

      const fakeState = group.dataset.fakeState

      const parent = group.querySelector('[part="parent-checkbox"]');
      if (fakeState) {
        parent.dataset.sketchState = fakeState
      }


      if (['hover', 'active'].includes(group.dataset.fakeState)) {
        parent.style.position = "relative";
        placeCursor(parent, { left: '37px', top: '0.8rem' })
      }

      group.dataset.sketchSymbol = generateSymbolName(group)
    });
  }

  document.addEventListener("DOMContentLoaded", () => {
    setTimeout(() => {
      onBeforePage2Layers()
    }, 1000)
  });

</script>
