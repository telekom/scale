<script src="/symbol_names.js"></script>
<script>
  Array.from(document.querySelectorAll('scale-card')).forEach((btn) => {
    const category = getCategoryName(btn);
    if (category === 'Standard') {
      btn.dataset.sketchSymbol = `Card / ${order(2, getCategoryName(btn))}`;
    } else {
      btn.dataset.sketchSymbol = `Card / ${order(
        2,
        getCategoryName(btn)
      )} / ${order(4, getStateName(btn))}`;
    }
  });
</script>
