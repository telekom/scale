<script>
  Array.from(document.querySelectorAll('scale-rating-stars')).forEach((btn, i) => {
    btn.dataset.sketchSymbol = `Rating / ${order(
      1,
      getSizeName(btn)
    )} / ${order(2, capitalize(btn.getAttribute('variant')))} / ${order(
      3,
      getCategoryName(btn)
    )} / ${order(4, getStateName(btn))}`;
  });
</script>
