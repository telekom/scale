<script>
  Array.from(document.querySelectorAll('scale-tag')).forEach((btn, i) => {
    btn.dataset.sketchSymbol = `Tag / ${order(
      1,
      getCategoryName(btn)
    )} / ${order(2, getSizeName(btn))} / ${order(
      3,
      btn.getAttribute('variant') ? 'Colored' : 'Black'
    )}${
      getCategoryName(btn) === 'Static'
        ? ''
        : ' / ' + order(4, getStateName(btn))
    }`;
  });
</script>
