<div data-sketch-artboard="Breadcrumb" class="artboard">
  <h1 class="title--artboard">Breadcrumb</h1>

  <h2 class="title--artboard-section">Example</h2>
  <div style="display: inline-block">
    <scale-breadcrumb data-sketch-key="breadcrumb-example">
      <a href="#">First Entry in Breadcrumb</a>
      <a href="#">Second Entry</a>
      <a href="#">Third Entry</a>
      <a href="#">Current Page</a>
    </scale-breadcrumb>
  </div>
  <br /><br />
  <br /><br />

  <h2 class="title--artboard-section">Current Page</h2>
  <div class="agent-states--grid">
    <div class="agent-states--item">
      <p class="agent-states--label">:available</p>
      <scale-breadcrumb data-sketch-key="breadcrumb-0" is-current>
        <a href="#">Current Page</a>
      </scale-breadcrumb>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:hover</p>
      —
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:focus</p>
      –
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:active/:selected</p>
      –
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:disabled</p>
      –
    </div>
  </div>

  <h2 class="title--artboard-section">Page links</h2>
  <div class="agent-states--grid">
    <div class="agent-states--item">
      <p class="agent-states--label">:available</p>
      <scale-breadcrumb data-sketch-key="breadcrumb-1" separator=" ">
        <a href="#">Breadcrumb Label</a>
        <div></div>
      </scale-breadcrumb>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:hover</p>
      <scale-breadcrumb
        data-sketch-key="breadcrumb-2"
        data-sketch-state="hover"
        separator=" "
      >
        <a href="#">Breadcrumb Label</a>
        <div></div>
      </scale-breadcrumb>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:focus</p>
      <scale-breadcrumb
        data-sketch-key="breadcrumb-3"
        data-sketch-state="focus"
        separator=" "
      >
        <a href="#">Breadcrumb Label</a>
        <div></div>
      </scale-breadcrumb>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:active/:selected</p>
      <scale-breadcrumb
        data-sketch-key="breadcrumb-4"
        data-sketch-state="active"
        separator=" "
      >
        <a href="#">Breadcrumb Label</a>
        <div></div>
      </scale-breadcrumb>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:disabled</p>
      –
    </div>
  </div>

  <h2 class="title--artboard-section">Separator</h2>
  <div class="agent-states--grid">
    <div class="agent-states--item">
      <p class="agent-states--label">:available</p>
      <scale-icon size="12" fill="#6B6B6B" path="{{>icon}}"></scale-icon>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:hover</p>
      –
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:focus</p>
      –
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:active/:selected</p>
      –
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:disabled</p>
      –
    </div>
  </div>
</div>

<script src="/symbol_names.js"></script>
<script>
  Array.from(document.querySelectorAll('scale-breadcrumb')).forEach(
    (btn, i) => {
      if (i === 0) {
        btn.dataset.sketchSymbol = `Breadcrumb / 00 Example`;
      } else {
        btn.dataset.sketchSymbol = `Breadcrumb / ${order(
          1,
          btn.hasAttribute('is-current') ? 'Current Page' : 'Page Links'
        )}${
          btn.hasAttribute('is-current')
            ? ''
            : ' / ' + order(4, getStateName(btn))
        }`;
      }
    }
  );
  Array.from(document.querySelectorAll('scale-icon')).forEach((btn) => {
    btn.dataset.sketchSymbol = `Breadcrumb / 03 Separator`;
  });
</script>
