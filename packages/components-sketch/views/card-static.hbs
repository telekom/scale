<div data-sketch-artboard="Card Static" class="artboard">
  <h1 class="title--artboard">Card Static</h1>

  <h2 class="title--artboard-section">Padding on</h2>
  <div class="agent-states--grid">
    <div class="agent-states--item">
      <p class="agent-states--label">:enabled</p>
      <scale-card data-sketch-key="card-static-1">
        <img src="/placeholder.png" alt="" />
      </scale-card>
    </div>
  </div>

  <h2 class="title--artboard-section">Padding off</h2>
  <div class="agent-states--grid">
    <div class="agent-states--item">
      <p class="agent-states--label">:enabled</p>
      <scale-card data-no-padding data-sketch-key="card-static-2">
        <img src="/placeholder.png" alt="" style="display: block" />
      </scale-card>
      <script>
        /* I couldn't find a way to do this with "theming" */
        document.querySelector('[data-no-padding]').styles = {
          card__body: { padding: 0 },
        };
      </script>
    </div>
  </div>
</div>

<script src="/symbol_names.js"></script>
<script>
  Array.from(document.querySelectorAll('scale-card')).forEach((btn) => {
    btn.dataset.sketchSymbol = `Card / 01 Static / ${order(
      2,
      'Padding ' + (btn.dataset.noPadding == null ? 'on' : 'off')
    )}`;
  });
</script>
