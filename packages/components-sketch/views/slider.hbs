<script>
  Array.from(document.querySelectorAll('scale-slider')).forEach((btn) => {
    btn.dataset.sketchSymbol = `Slider / ${order(
      0,
      getCategoryName(btn)
    )} / ${order(
      4,
      btn.hasAttribute('disabled')
        ? 'Disabled'
        : btn.hasAttribute('custom-color')
        ? 'Custom Color'
        : 'Magenta'
    )}`;
