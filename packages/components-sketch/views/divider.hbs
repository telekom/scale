<div data-sketch-artboard="Divider" class="artboard">
  <h1 class="title--artboard">Divider</h1>

  <h2 class="title--artboard-section">Standard</h2>
  <div class="agent-states--fullwidth">
    <scale-divider data-sketch-key="divider-horizontal"></scale-divider>
  </div>

  <h2 class="title--artboard-section">Vertical</h2>
  <div class="agent-states--fullwidth vertical">
    <scale-divider vertical data-sketch-key="divider-vertical"></scale-divider>
  </div>
</div>

<script src="/symbol_names.js"></script>
<script>
  Array.from(document.querySelectorAll('scale-divider')).forEach((btn) => {
    btn.dataset.sketchSymbol = `Divider / ${order(
      2,
      btn.getAttribute('vertical') === null ? 'Standard' : 'Vertical'
    )}`;
  });
</script>
