{
  "name": "@telekom/scale-components-react",
  "sideEffects": false,
  "version": "3.0.0-beta.159",
  "description": "React proxy for @telekom/scale-components",
  "license": "MPL-2.0",
  "homepage": "https://github.com/telekom/scale",
  "repository": {
    "type": "git",
    "url": "https://github.com/telekom/scale.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "yarn clean && yarn rollup",
    "zip": "zip -vr telekom-scale-components-react-$npm_package_version.zip dist/ -x '*.DS_Store'",
    "clean": "rimraf dist",
    "format": "prettier --write \"package.json\"",
    "rollup": "rollup -c"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.1",
    "@types/react-dom": "^18.3.1",
    "rimraf": "^3.0.2",
    "rollup": "2.79.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/vfile-message": "^2.0.0"
  },
  "peerDependencies": {
    "@types/react-dom": "^18.3.1",
    "react": ">=16.13.1",
    "react-dom": ">=16.13.1"
  },
  "jest": {
    "preset": "ts-jest",
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
    "testPathIgnorePatterns": [
      "node_modules",
      "dist"
    ]
  }
}
