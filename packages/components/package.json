{
  "name": "@scaleds/components",
  "version": "0.0.15",
  "description": "Scale Components",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/scale-components/scale-components.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "prebuild": "yarn build:theme",
    "build:theme": "rollup -c",
    "build:prod": "stencil build --prod",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e --max-workers=2",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "format": "prettier --write \"src/**/*.{tsx,ts,css,json}\" \"!src/**/*.d.ts\"",
    "lint": "yarn lint:types && yarn lint:style && yarn lint:format",
    "lint:fix": "yarn lint:style --fix",
    "lint:types": "tsc --noEmit",
    "lint:style": "tslint -c tslint.json -p . \"src/**/*.{tsx,ts,css,json}\" \"!src/**/*.d.ts\"",
    "lint:format": "prettier --list-different \"src/**/*.{tsx,ts,css,json}\" \"!src/**/*.d.ts\"",
    "verify": "yarn format && yarn lint:fix"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-typescript": "^4.0.0",
    "@stencil/core": "^1.11.3",
    "@types/classnames": "^2.2.8",
    "@types/jest": "24.0.25",
    "@types/lodash": "^4.14.149",
    "@types/puppeteer": "1.20.3",
    "date-fns": "^2.6.0",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "jss": "^10.0.4",
    "jss-preset-default": "^10.0.4",
    "lodash": "^4.17.15",
    "prettier": "^1.18.2",
    "puppeteer": "1.20.0",
    "rollup": "^2.3.2",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0"
  },
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.2.6"
  }
}
